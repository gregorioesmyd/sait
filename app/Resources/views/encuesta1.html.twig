<trivias/html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <title>{% block title %}Telesur{% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('css/encuestas.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('libs/menu/css/menu.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('libs/DataTables-1.10.3/media/css/jquery.dataTables.css') }}" rel="stylesheet" type="text/css"/>
            <link rel="stylesheet" href="{{ asset('libs/bootstrap3/css/bootstrap-theme.min.css') }}">
            <link rel="stylesheet" href="{{ asset('libs/bootstrap3/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('libs/jQuery-Countdown/css/jquery.classycountdown.css') }}">

            <link rel="stylesheet" href="{{ asset('libs/datepiker/css/redmond/jquery-ui-1.10.4.custom.css') }}">
            <link rel="stylesheet" href="{{ asset('libs/datepiker/css/redmond/jquery-ui-1.10.4.custom.min.css') }}">
            <style type="text/css">

                #regalo-rojo, #regalo-rojo img {
                    float: left;
                    margin-left: -25px;
                }

            </style>
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/jquery.js') }}"></script>
            <script src="{{ asset('libs/DataTables-1.10.3/media/js/jquery.dataTables.js') }}"></script>
            <script src="{{ asset('libs/jquery-circle-progress-1.1.3/dist/circle-progress.js') }}"></script>
            <script src="{{ asset('libs/jQuery-Countdown/js/jquery.knob.js') }}"></script>
            <script src="{{ asset('libs/jQuery-Countdown/js/jquery.classycountdown.js') }}"></script>
            <script src="{{ asset('libs/jQuery-Countdown/js/jquery.throttle.js') }}"></script>


            <script src="{{ asset('libs/bootstrap3/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('libs/datepiker/js/jquery-ui-1.10.4.custom.min.js') }}"></script>
            <script src="{{ asset('libs/datepiker/js/jquery-ui-datepicker-es.js') }}"></script>

            <script>
                $(document).ready(function() {
                    $('form').submit(function(){
                       $('input[type=submit]', this).attr('disabled', '');
                       $('button[type=submit]', this).attr('disabled', '');
                    });
                });
            </script>
        {% endblock %}


    </head>

    <body style="background-color:#F2F2F2;">


        <div align='center'>
          <div class="contenedorprincipal1">
            <div class="logotelesur"><img src="{{ asset('images/logo.svg') }}"></div>

                {% block body %}
                <div class="breadcrumbtrivias">
                <table style="max-width:100%;">
                    <thead>
                        <tr class="info1">
                            <th style="width:20%;"><img src="{{ asset('images/trivias/logo_breadcrumb.jpg') }}"></th>
                            <th style="width:765px;padding-left:5px;">Trivia</th>
                        </tr>
                    </thead>
                  </table>
                </div>
                  <img style="margin-top: 80px;width: 100%;"src="{{ asset('images/trivias/Cintillo-trivia-1000x120.jpg') }}">


                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="alert alert-success">
                            {{ flashMessage | raw }}
                        </div>
                    {% endfor %}

                    {% for flashMessage in app.session.flashbag.get('alert') %}
                        <div class="alerta alerta-danger">
                            {{ flashMessage | raw }}
                        </div>
                    {% endfor %}

                {% endblock %}


            </div><br><br><div>
            <footer  class="pieintranet">

                  La Nueva Televisión del Sur C.A. (TVSUR) <br> Copyright © 2015, Intranet teleSUR. Todo el contenido es exclusivo para el uso interno del canal. RIF. G-20004500-0
                </div>
            </footer>

        </div>
    </body>
</html>
