<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <title>{% block title %}Telesur{% endblock %}</title>

        {% block stylesheets %}
            <link href="{{ asset('css/general.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('libs/menu/css/menu.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('libs/DataTables-1.10.3/media/css/jquery.dataTables.css') }}" rel="stylesheet" type="text/css"/>
            <link rel="stylesheet" href="{{ asset('libs/bootstrap3/css/bootstrap-theme.css') }}">
            <link rel="stylesheet" href="{{ asset('libs/bootstrap3/css/bootstrap.css') }}">
            
            <link rel="stylesheet" href="{{ asset('libs/datepiker/css/redmond/jquery-ui-1.10.4.custom.css') }}">
            <link rel="stylesheet" href="{{ asset('libs/datepiker/css/redmond/jquery-ui-1.10.4.custom.min.css') }}">

            <link rel="stylesheet" href="{{ asset('libs/jquery-timepicker/jquery.timepicker.css') }}">

            <style type="text/css">

                #regalo-rojo, #regalo-rojo img {
                    float: left;
                    margin-left: -25px;
                }

            </style>
        {% endblock %}
            
        {% block javascripts %}
            <script src="{{ asset('js/jquery.js') }}"></script>
            <script src="{{ asset('libs/DataTables-1.10.3/media/js/jquery.dataTables.js') }}"></script>
            
            <script src="{{ asset('libs/bootstrap3/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('libs/datepiker/js/jquery-ui-1.10.4.custom.min.js') }}"></script>
            <script src="{{ asset('libs/datepiker/js/jquery-ui-datepicker-es.js') }}"></script>
            <script src="{{ asset('libs/jquery-timepicker/jquery.timepicker.js') }}"></script>
            <script src="{{ asset('libs/jquery-timepicker/jquery.timepicker.min.js') }}"></script>

            <script>
              (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
              (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
              m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
              })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

              ga('create', 'UA-65911877-3', 'auto');
              ga('send', 'pageview');

            </script>
            <script>
                $(document).ready(function() {
                    $('form').submit(function(){
                       $('input[type=submit]', this).attr('disabled', '');
                       $('button[type=submit]', this).attr('disabled', '');
                    });
                });
            </script> 
        {% endblock %}


    </head>

    <body>
        <div align='center'>
                            
            {% block banner %}
                <div id='banner'><img class="img-responsive" src="{{ asset('images/banner_02.jpg') }}"></div>
            {% endblock %}
                
            <div class="contenedorprincipal">
                {% block menu %}{% endblock %}

                {% block body %}
                    <div class="ubicacion">{% block ubicacion %} {% endblock %}</div>
                    <div class="titulo">{% block titulo %}{% endblock %}</div>

                    {% for flashMessage in app.session.flashbag.get('notice') %}
                        <div class="alert alert-success">
                            {{ flashMessage | raw }}
                        </div>
                    {% endfor %}

                    {% for flashMessage in app.session.flashbag.get('alert') %}
                        <div class="alert alert-danger">
                            {{ flashMessage | raw }}
                        </div>
                    {% endfor %}

                    {% block mensaje %}  {% endblock %}
                    
                {% endblock %}


            </div>
                <br><br>
                
                    <div  class="pie">
                        La Nueva Televisión del Sur C.A. (TVSUR)<br>
                        Copyright © 2015, Intranet teleSUR. Todo el contenido es exclusivo para el uso interno del canal. RIF. G-20004500-0
                    </div><br><br>
        </div>
                  
    </body>
</html>
