{% extends '::cumpleanios.html.twig' %}


{% block title %}Listado{% endblock %}

{% block titulo %}
    LISTADO DE EFEMERIDES
{% endblock %}

{% block ubicacion %}
    <ol class="breadcrumb">
        <li><a href="{{ path("usuario_homepage") }}">INICIO</a></li>
        <li><a href="{{ path("cumpleanios_homepage") }}">GESTION DE NOTIFICACIONES</a></li>
        <li class="active">LISTADO DE EFEMERIDES</li>
    </ol>
{% endblock %}

{% block body -%}

    {{ parent() }}

    <table id="tabladatatable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Día</th>
                <th>Mes</th>
                <th>Año</th>
                <th>Tipo</th>                
                <th>Pais</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.nombre }}</td>
                    <td>{{ entity.dia }}</td>
                    <td>{{ entity.mes }}</td>
                    <td>{{ entity.anio }}</td>
                    <td>{{ entity.tipoId }}</td>
                    <td>{{ entity.paisId }}</td>
                    <td>
                        <a href="{{ path('efemerides_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-search"></a>
                        <a href="{{ path('efemerides_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <br><br><br>
    <a class="btn btn-primary" href="{{ path('efemerides_new') }}">
        NUEVA EFEMERIDE
    </a>
    <br>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tabladatatable').dataTable({//CONVERTIMOS NUESTRO LISTADO DE LA FORMA DEL JQUERY.DATATABLES- PASAMOS EL ID DE LA TABLA
                "sPaginationType": "full_numbers", //DAMOS FORMATO A LA PAGINACION(NUMEROS)
                "aaSorting": [[0, 'asc']]
            });
        });
    </script>
    <br>
{% endblock %}
