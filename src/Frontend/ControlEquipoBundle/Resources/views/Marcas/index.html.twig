{% extends '::controlequipo.html.twig' %}

{% block ubicacion %}
        <ol class="breadcrumb">
            <li><a href="{{ path("controlequipo_homepage") }}">INICIO</a></li>
            <li class="active">MARCAS Y MODELOS</li>

        </ol>
{% endblock %}
{% block body %}
    {{ parent() }}
    <h1>Marcas Registradas</h1>

    <table id="tabladatatable" class="table table-hover" style="max-width:800px;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marca</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('marca_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.descripcionMarca }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('marca_show', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="Ver"><span class="glyphicon glyphicon-eye-open"></a>
                        <a href="{{ path('marca_edit', { 'id': entity.id }) }}" data-toggle="tooltip" data-placement="top" title="Editar"><span class="glyphicon glyphicon-edit"></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <br><br><br>
            <a class="btn btn-primary" href="{{ path('marca_new') }}"><span>REGISTRAR MARCA</span></a>
            <br><br>
        </li>
    </ul>
                <script type="text/javascript">
        $(document).ready(function(){
           $('span').tooltip()
            
           $('#tabladatatable').dataTable( { //CONVERTIMOS NUESTRO LISTADO DE LA FORMA DEL JQUERY.DATATABLES- PASAMOS EL ID DE LA TABLA
                "sPaginationType": "full_numbers", //DAMOS FORMATO A LA PAGINACION(NUMEROS)
                "aaSorting": [[0,'desc']],
            } );
        })
    </script>
    <style>
        .dataTables_wrapper {
            max-width:800px;
        }
        
        
    </style>
    {% endblock %}