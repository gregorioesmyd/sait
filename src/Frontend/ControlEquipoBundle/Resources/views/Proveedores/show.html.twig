            </tr>
            <tr>
                <th>Proveedor</th>
                <td>{{ entity.descripcionProveedor }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>            
        <a class="btn btn-default" href="{{ path('proveedor') }}">
            Ver Lista de Proveedores
        </a> | 
        <a class="btn btn-default" href="{{ path('proveedor_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <br>
    <li>{{ form_start(delete_form, { 'attr': {'onsubmit': 'return confirm("Â¿Seguro que deseas eliminar?")'} }) }}
            {{ form_errors(delete_form) }}
            {{ form_row(delete_form.submit, { 'attr': {'class': 'btn btn-danger'} }) }}
        {{ form_end(delete_form) }}</li>
</ul>
{% endblock %}

