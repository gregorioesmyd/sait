{% extends '::encuesta.html.twig' %}

{% block title %}Encuesta-Detalle{% endblock %}

{% block titulo %}
    DETALLE DE ENCUESTA "{{ entity.nombre }}"
{% endblock %}

{% block ubicacion %}
<ol class="breadcrumb">
  <li><a href="{{ path("usuario_homepage") }}">INICIO</a></li>
  <li><a href="{{ path("encuesta_index") }}">LISTA DE ENCUESTAS</a></li>
  <li class="active">DETALLE DE ENCUESTA</li>
</ol>
{% endblock %}


{% block body -%}
    {{ parent() }}

    <div class="formShow">
      <div class="contenedorform">
          <div class="labelform">Tipo de encuesta:</div>
          <div class="widgetform">{{ entity.tipoencuesta }}</div>
      </div>
      <div class="contenedorform">
          <div class="labelform">Fecha y hora de inicio:</div>
          <div class="widgetform">{{ entity.fechainicioencuesta|date('d-m-Y') }} {{ entity.horainicio|date('H:i:s') }}</div>
      </div>
      <div class="contenedorform">
          <div class="labelform">Fecha y hora de fin:</div>
          <div class="widgetform">{{ entity.fechafinencuesta|date('d-m-Y') }} {{ entity.horafin|date('H:i:s') }}</div>
      </div>
      <div class="contenedorform">
          <div class="labelform">Tema:</div>
          <div class="widgetform">{{ entity.tema }}</div>
      </div>
      <div class="contenedorform">
          <div class="labelform">Número de preguntas que respoderá el usuario:</div>
          <div class="widgetform">{{ entity.numeropregunta }}</div>
      </div>
    </div>
    <br><br>
    <a class="btn btn-default" href="{{ path('encuesta_index') }}">IR A LA LISTA</a> |
    <a class="btn btn-default" href="{{ path('encuesta_edit', { 'id': entity.id }) }}">IR A EDITAR</a> |
    <a class="btn btn-default" href="{{ path('pregunta_index', { 'idencuesta': entity.id }) }}"> VER PREGUNTAS</a>
    <br><br>

{% endblock %}
