{% extends '::base_trueques.html.twig' %}

{% block body -%}
    <h1>Categoria</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        {% for item in entity.productos %}
            <li>{{ item.nombre }}</li>
        {% endfor %}
    </ul>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_categoria') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('admin_categoria_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
    
{% endblock %}
