{% extends '::base_trueques.html.twig' %}

{% block body -%}
    <h1>Categoria list</h1>

    <a href="{{ path('admin_categoria_new') }}" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span>  Nuevo</a>
    <table class="dataTable table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_categoria_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>
                    <a href="{{ path('admin_categoria_edit', { 'id': entity.id }) }}" class="btn btn-default">
                        <span class="glyphicon glyphicon-edit"></span>    Editar
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
