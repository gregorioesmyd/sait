{% extends 'VideotecaBundle:Prestamo:default.html.twig' %}

{% block title %}Prestamos{% endblock %}

{% block data %}
{{parent()}}
    <div class="row">
        <div class="text-center col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
            <h3 class="title-section">INFORMACION DE CINTAS PRESTADA</h3>
        </div>
    </div>
<div id="wrapper-show" class="col-xs-8 col-xs-offset-2">
    <div class="row well">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="row wrapper-campos">
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 theader">
                    <span><b>Usuario Prestamista:</b></span>
                </div>
                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                    <span>{{ entity.idPrestamo.userPrestamista }}</span>
                </div>
            </div>
            <div class="row wrapper-campos">
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 theader">
                    <span><b>Usuario Solicitante:</b></span>
                </div>
                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                    <span>{{ entity.idPrestamo.userSolicitante  }}</span>
                </div>
            </div>
            <div class="row wrapper-campos">
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 theader">
                    <span><b>Factura:</b></span>
                </div>
                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                    <p>{{ entity.idPrestamo.factura }}</p>
                </div>
            </div>
            <div class="row wrapper-campos">
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 theader">
                    <span><b>Codigo de la Cinta:</b></span>
                </div>
                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                    <p>{{ entity.idCinta }}</p>
                </div>
            </div>
            <div class="row wrapper-campos">
                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 theader">
                    <span><b>Estatus:</b></span>
                </div>
                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
                    <p>{{ entity.idCinta.status }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
            <a class="btn btn-default pull-left" href="{{ path('videoteca_prestamo') }}">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                IR A LISTADO
            </a>
        </div>
    </div>
</div>
{% endblock %}