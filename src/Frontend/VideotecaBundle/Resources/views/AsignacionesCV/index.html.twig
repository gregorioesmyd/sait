{% extends 'VideotecaBundle:CintasVirgenes:default.html.twig' %}

{% block data %}
    <div class="row">
        <div class="text-center col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
            <h3 class="title-section">HIST&Oacute;RICO ASIGNACIONES</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <table class="table table-striped table-bordered addDataTable tableInventario">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Cinta</th>
                        <th>Usuario Solicitante</th>
                        <th>Usuario Prestamista</th>
                        <th>Cantidad Asignada</th>
                        <th style="width: 89px;">Motivo</th>
                        <th>Fecha de Entrega</th>
                    </tr>
                </thead>
                <tbody>
                  {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('asignacionescv_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.idCintasVirgenes.nombreCv}}</td>
                        <td>{{ entity.idUsuarioSolicitante }}</td>
                        <td>{{ entity.idUsuarioPrestamista }}</td>
                        <td>{{ entity.cantidad }}</td>
                        <td>{{ entity.motivo }}</td>
                        <td>{% if entity.fechaEntrega %}{{ entity.fechaEntrega|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
            {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="text-center col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
            <a class="btn btn-default" role="button" href="{{ path('cintasvirgenes') }}">
               VOLVER A LA LISTA 
            </a>
        </div>
    </div>
{% endblock %}
